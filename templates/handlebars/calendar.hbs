<div class="month-wrapper">
    <div class="month-header">
        <div class="side-arrow left-arrow" data-month="{{left_subtract}}"><i class="fa fa-chevron-left"></i></div>
        <div><span class="month" data-month="{{month_number}}">{{month}}</span> <span class="year">{{year}}</span></div>
        <div class="side-arrow right-arrow" data-month="{{right_subtract}}"><i class="fa fa-chevron-right"></i></div>
    </div>
    <table class="month-calendar">
        <thead class="day-of-week">
            <tr>
                <th scope="col">S</th>
                <th scope="col">M</th>
                <th scope="col">T</th>
                <th scope="col">W</th>
                <th scope="col">T</th>
                <th scope="col">F</th>
                <th scope="col">S</th>
            </tr>
        </thead>

        <tbody>
            <tr>
                {{#calendar 1 starting_day month_length}}
                    <td class="{{#ifCond '' '==' this}}nonSelectable{{/ifCond}} {{attendance ../year ../month_number this}}" data-epoch="{{epoch ../year ../month_number this}}"><span class="cal-check"><i class="fas fa-check"></i></span>{{this}}</td>
                {{/calendar}}
            </tr>
            <tr>
                {{#calendar 2 starting_day month_length}}
                    <td class="{{#ifCond '' '==' this}}nonSelectable{{/ifCond}} {{attendance ../year ../month_number this}}" data-epoch="{{epoch ../year ../month_number this}}"><span class="cal-check"><i class="fas fa-check"></i></span>{{this}}</td>
                {{/calendar}}
            </tr>
            <tr>
                {{#calendar 3 starting_day month_length}}
                    <td class="{{#ifCond '' '==' this}}nonSelectable{{/ifCond}} {{attendance ../year ../month_number this}}" data-epoch="{{epoch ../year ../month_number this}}"><span class="cal-check"><i class="fas fa-check"></i></span>{{this}}</td>
                {{/calendar}}
            </tr>
            <tr>
                {{#calendar 4 starting_day month_length}}
                    <td class="{{#ifCond '' '==' this}}nonSelectable{{/ifCond}} {{attendance ../year ../month_number this}}" data-epoch="{{epoch ../year ../month_number this}}"><span class="cal-check"><i class="fas fa-check"></i></span>{{this}}</td>
                {{/calendar}}
            </tr>
            <tr>
                {{#calendar 5 starting_day month_length}}
                    <td class="{{#ifCond '' '==' this}}nonSelectable{{/ifCond}} {{attendance ../year ../month_number this}}" data-epoch="{{epoch ../year ../month_number this}}"><span class="cal-check"><i class="fas fa-check"></i></span>{{this}}</td>
                {{/calendar}}
            </tr>
            <tr>
                {{#calendar 6 starting_day month_length}}
                    <td class="{{#ifCond '' '==' this}}nonSelectable{{/ifCond}} {{attendance ../year ../month_number this}}" data-epoch="{{epoch ../year ../month_number this}}"><span class="cal-check"><i class="fas fa-check"></i></span>{{this}}</td>
                {{/calendar}}
            </tr>
        </tbody>
    </table>
</div>